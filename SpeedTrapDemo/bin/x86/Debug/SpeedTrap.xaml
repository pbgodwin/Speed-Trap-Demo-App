<UserControl
    x:Class="SpeedTrapDemo.SpeedTrap"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpeedTrapDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="10,10">
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="20" Foreground="Black" Text="Latitude: "/>
            <TextBlock FontSize="20" Foreground="Black" x:Name="latText"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="20" Foreground="Black" Text="Longitude: "/>
            <TextBlock FontSize="20" Foreground="Black" x:Name="longText"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" x:Name="datePanel" Visibility="Collapsed">
            <TextBlock FontSize="20" Foreground="Black" Text="Created At: "/>
            <TextBlock FontSize="20" Foreground="Black" x:Name="dateText"/>
        </StackPanel>
    </StackPanel>
</UserControl>

